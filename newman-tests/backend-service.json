						"exec": [
							"pm.test(\"POST - users status code...\", function () {",
							"    var code = pm.response;",
							"    ",
							"    if (code === 201) {",
							"        code.to.have.status(201);",
							"    } else if (code === 200) {",
							"        code.to.have.status(200);",
							"    }",
							"});",
							"",
							"var response = pm.response.text();",
							"var userId = response.substring(5, response.indexOf('has'));",
							"",
							"pm.environment.set('user_test_id', userId.toString());"
						],
						"type": "text/javascript"
					}
				}
			],
